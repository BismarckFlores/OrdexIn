@model OrdexIn.Models.ViewModels.KardexViewModel

@{
    ViewData["Title"] = "Kardex";
}

<h2 class="mt-3">Kardex - Movimientos de Inventario</h2>

<form method="get" class="mb-4 mt-3">

    <div class="row">
        <div class="col-md-3">
            <label>Producto</label>
            <select name="idProducto" class="form-control">
                <option value="">-- Seleccionar --</option>
                @foreach (var p in Model.Productos)
                {
                    <option value="@p.IdProducto"
                            selected="@(Model.IdProducto == p.IdProducto)">
                        @p.NombreProducto
                    </option>
                }
            </select>
        </div>

        <div class="col-md-3">
            <label>Fecha inicio</label>
            <input type="date" name="inicio" class="form-control"
                   value="@Model.FechaInicio?.ToString("yyyy-MM-dd")">
        </div>

        <div class="col-md-3">
            <label>Fecha fin</label>
            <input type="date" name="fin" class="form-control"
                   value="@Model.FechaFin?.ToString("yyyy-MM-dd")">
        </div>

        <div class="col-md-3 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">Filtrar</button>
        </div>
    </div>
</form>

<hr />

@if (Model.IdProducto == null)
{
    <p class="text-muted">Seleccione un producto para ver el kardex.</p>
    return;
}

<!-- ====================== -->
<!-- MOVIMIENTOS DEL KARDEX -->
<!-- ====================== -->

<h4 class="mt-3">Historial de Movimientos</h4>

<table class="table table-bordered table-striped mt-3">
    <thead class="table-dark">
        <tr>
            <th>Fecha</th>
            <th>Tipo</th>
            <th>Cantidad</th>
            <th>Saldo Resultante</th>
            <th>Usuario</th>
            <th>Observación</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model.Movimientos)
        {
            <tr>
                <td>@m.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@m.Tipo</td>
                <td>@m.Cantidad</td>
                <td>@m.SaldoResultante</td>
                <td>@m.Usuario</td>
                <td>@m.Observacion</td>
            </tr>
        }
        }
    </tbody>
</table>

<hr />

<!-- =============== -->
<!-- REPORTE VENTAS -->
<!-- =============== -->

<h2 class="mt-5">Reporte Financiero - Ventas</h2>

@if (Model.FechaInicio != null && Model.FechaFin != null)
{
    <h5>Total vendido: <strong>@Model.TotalVentas.ToString("C")</strong></h5>
    <h5>Transacciones: <strong>@Model.TotalTransacciones</strong></h5>

    <table class="table table-bordered table-hover mt-3">
        <thead class="table-dark">
            <tr>
                <th>ID Venta</th>
                <th>Fecha</th>
                <th>Total</th>
                <th>Usuario</th>
                <th>Detalles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var v in Model.Ventas)
            {
                <tr>
                    <td>@v.IdVenta</td>
                    <td>@v.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@v.Total.ToString("C")</td>
                    <td>@v.Usuario</td>
                    <td>@v.Detalles</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">Seleccione un rango de fechas para ver las ventas.</p>
}
