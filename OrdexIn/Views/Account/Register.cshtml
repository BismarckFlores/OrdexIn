@model OrdexIn.Models.UserModel
@{
    ViewData["Title"] = "Registro de usuario";
}

<div class="auth-wrapper">
    <div class = "auth-container">
        <h4 id = "authTitle" class = "text-center mb-4">Registro de usuario</h4>
        <p id = "authSubtitle" class= "text-center mb-4">Crea una cuenta nueva</p>
        <hr class = "mb-4" />

        <form method = "post" id = "authForm" asp-action="ProcessRegister" novalidate>
            <div asp-validation-summary = "ModelOnly" class = "text-danger alert alert-danger" role = "alert"></div>

            @*Email Field*@
            <div class="form-group">
                <div class = "input-wrapper">
                    <input asp-for="Email" id="Email" name="Email" type="email" required autocomplete="email" placeholder=" ">
                    <label asp-for="Email">Email</label>
                    <span class="input-line"></span> @* Barra inferior animada *@
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            @*Password Field*@
            <div class="form-group">
                <div class = "input-wrapper">
                    <input asp-for="Password" id="Password" name="Password" type="password" required autocomplete="new-password" placeholder=" ">
                    <label asp-for="Password">Password</label>
                    <span class="input-line"></span>
                </div>
                <span asp-validation-for="Password" class="text-danger" id="pwdError"></span>
            </div>

            @* Confirm Password Field *@
            <div class="form-group">
                <div class="input-wrapper">
                    <input asp-for="ConfirmPassword" id="ConfirmPassword" name="ConfirmPassword" type="password" required autocomplete="new-password" placeholder=" ">
                    <label asp-for="ConfirmPassword">Confirmar Contraseña</label>
                    <span class="input-line"></span>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger" id="confirmError"></span>
            </div>

            @* BOTÓN DE REGISTRO ÚNICO *@
            <div class="form-group mt-4 d-grid gap-2">
                <button type="submit" id="submitBtn" class="btn btn-success btn-lg">
                    Registrarse
                </button>
            </div>
        </form>
    </div>

    @* Enlace para ir a la página de login *@
    <div class="text-center mt-1 login-link-alt">
        <p id="toggleText">
            ¿Ya tienes cuenta?
            <a asp-action="Login" class="toggle-link">Inicia sesión</a>
        </p>
    </div>
</div>

@section Scripts {
    <script src="~/js/signup-validation.js" asp-append-version="true"></script>
}