@model OrdexIn.Models.UserModel
@{
    ViewData["Title"] = "Recuperar contraseña";
}

<div class="auth-wrapper">
    <div class="auth-container">
        <h4 id="authTitle" class="text-center mb-4">Recuperar contraseña</h4>
        <p id="authSubtitle" class="text-center mb-4">Introduce tu correo para recibir instrucciones.</p>
        <hr class="mb-4" />

        <form asp-action="ProcessForgotPassword" method="post" novalidate>
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger" role="alert"></div>

            <div class="form-group">
                <div class="input-wrapper">
                    <input id="Email" name="email" type="email" required autocomplete="email" placeholder=" ">
                    <label for="Email">Email</label>
                    <span class="input-line"></span>
                </div>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="form-group mt-4 d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-lg">Enviar instrucciones</button>
            </div>
        </form>
    </div>
    <div class="text-center mt-2">
        <a asp-action="Login" class="toggle-link">Volver a iniciar sesión</a>
    </div>
</div>